@using SellPoint.Presentation.WebClient.Components
@inherits LayoutComponentBase
@inject StateContainer localStorage
@page "/login"

<PageTitle>SellPoint</PageTitle>

@if (localStorage.user is null)
{
    <Login></Login>
}
else
{
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>
        <main>
            <div class="top-row px-4">
            </div>

            <article class="content px-4">
                @Body
            </article>
           
        </main>
         <footer class="fixed-bottom text-white">

                <p>

                    <span> User: <b>@localStorage.user.UserNameEntidad</b> </span>
                    |
                    <span> Date: <b>@DateTime.Now.ToShortDateString() </b> </span> |
                </p>

            </footer>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {

    }
}
